{
  "name": "ddrv/dresscode",
  "type": "library",
  "description": "OpenAPI schema validator",
  "keywords": ["openapi", "validator", "swagger"],
  "license": "MIT",
  "homepage": "https://dresscode.ddrv.ru/",
  "authors": [
    {
      "name": "Ivan Dudarev",
      "email": "ivan@ddrv.ru",
      "homepage": "https://ddrv.ru"
    }
  ],
  "require": {
    "php": ">=7.2",
    "ext-json": "*",
    "ext-mbstring": "*"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^3.5",
    "phpunit/phpunit": "^8.5"
  },
  "autoload": {
    "psr-4": {
      "Ddrv\\DressCode\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\Ddrv\\DressCode\\": "tests/"
    }
  },
  "funding": [
    {
      "type": "other",
      "url": "https://www.paypal.me/ddrv"
    },
    {
      "type": "patreon",
      "url": "https://www.patreon.com/ddrv"
    }
  ]
}
